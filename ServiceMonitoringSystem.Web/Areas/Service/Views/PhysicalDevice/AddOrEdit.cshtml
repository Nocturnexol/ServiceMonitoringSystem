@{
    var F = Html.F();
}

@model PhysicalDevice

@section body {

    @(F.Panel()
          .ID("Panel1")
          .ShowBorder(false)
          .ShowHeader(false)
          .BodyPadding(10)
          .AutoScroll(true)
          .IsViewPort(true)
          .Toolbars(
              F.Toolbar()
                  .Items(
                      F.Button()
                          .Icon(Icon.SystemClose)
                          .Text("关闭")
                          .Listener("click", "F.activeWindow.hide();"),
                      F.ToolbarSeparator(),
                      F.Button()
                          .ValidateForms("SimpleForm1")
                          .Icon(Icon.SystemSaveClose)
                          .OnClick(Url.Action("AddOrEdit"), "SimpleForm1")
                          .Text("保存后关闭")
                  )
          )
          .Items(
              F.SimpleForm()
                  .ID("SimpleForm1")
                  .ShowBorder(false)
                  .ShowHeader(false)
                  .Items(
                      Model == null ? new HiddenFieldExtension(new HiddenField()) : F.HiddenFieldFor(m => m.Rid),
                      F.TextBoxFor(m => m.MachineName),
                      F.TextBoxFor(m => m.ModelNum),
                      F.DropDownListFor(m => m.DeviceType).Items(ViewBag.DeviceTypeList),
                      F.DropDownListFor(m => m.Owner).Items(ViewBag.OwnerList),
                      F.TextBoxFor(m => m.PublicIP),
                      F.TextBoxFor(m => m.IntranetIP),
                      F.TextBoxFor(m => m.ManagementIP),
                      F.TextBoxFor(m => m.DomainIP),
                      F.TextBoxFor(m => m.Cpu),
                      F.TextBoxFor(m => m.Memory),
                      F.TextBoxFor(m => m.Storage),
                      F.TextBoxFor(m => m.Locale),
                      F.DatePickerFor(m=>m.Date),
                      F.DatePickerFor(m=>m.PurchaseDate),
                      F.DatePickerFor(m=>m.WarrantyExpiry),
                      F.TextBoxFor(m=>m.NetTpParam),
                      F.TextAreaFor(m => m.Remark)
                  )
          ))

}
